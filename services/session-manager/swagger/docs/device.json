  "basePath": "/dev",
  "tags": [
    {
      "name": "device",
      "description": "Private API VPC link must be created"
    }
  ],
  "schemes": [
    "https"
  ],
  "paths": {
    "/device": {
      "post": {
        "tags": [
          "device"
        ],
        "summary": "count user device",
        "description": "",
        "operationId": "addDevice",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "description": "The device registration",
            "schema": {
              "type": "object",
              "required": [
                "user_id",
                "device_count"
              ],
              "properties": {
                "user_id": {
                  "type": "string",
                  "example": "someId"
                },
                "device_count": {
                  "type": "integer", 
                  "example": 1
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/DeviceResponse"
            }
          },
          "400": {
            "description": "Invalid request body"
          },
          "406": {
            "description": "Limit reached, move to PRO plan"
          },
          "422": {
            "description": "Failed to parse JSON from request body"
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    }
  },
  "definitions": {
    "DeviceResponse": {
      "type": "object",
      "properties": {
        "message": {
          "example": "Remaining devices: 1",
          "type": "string"
        },
        "remaining_devices": {
          "description": "The number of remaining devices",
          "example": 1,
          "type": "integer"
        }
      }
    }
  }
