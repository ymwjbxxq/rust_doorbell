    "/stream": {
      "post": {
        "tags": [
          "stream"
        ],
        "summary": "Send ping for user stream",
        "description": "",
        "operationId": "Ping",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "stream",
            "description": "User stream",
            "schema": {
              "type": "object",
              "required": [
                "user_id",
                "video_id"
              ],
              "properties": {
                "user_id": {
                  "type": "string",
                  "example": "someId"
                },
                "video_id": {
                  "type": "string", 
                  "example": "someId"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "TTL updated"
          },
          "201": {
            "description": "Stream added"
          },
          "400": {
            "description": "Failed to parse from request body"
          },
          "404": {
            "description": "No subscription found"
          },
          "406": {
            "description": "Too many active streams, move to PRO plan"
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    }
