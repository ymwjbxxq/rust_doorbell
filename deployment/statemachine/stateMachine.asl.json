{
  "Comment": "Compare face flow",
  "StartAt": "Map input",
  "States": {
    "Map input": {
      "Type": "Pass",
      "Next": "CompareFaces",
      "Parameters": {
        "bucketName.$": "$.bucket.name",
        "input.$": "$.object.key"
      }
    },
    "CompareFaces": {
      "Type": "Task",
      "Parameters": {
        "SimilarityThreshold": 70,
        "SourceImage": {
          "S3Object": {
            "Bucket.$": "$.bucketName",
            "Name": "source.jpeg"
          }
        },
        "TargetImage": {
          "S3Object": {
            "Bucket.$": "$.bucketName",
            "Name.$": "$.input"
          }
        }
      },
      "Resource": "arn:aws:states:::aws-sdk:rekognition:compareFaces",
      "Next": "Map CompareFaces",
      "Catch": [
        {
          "ErrorEquals": [
            "Rekognition.InvalidParameterException"
          ],
          "Next": "Not Human"
        }
      ],
      "ResultPath": "$.output"
    },
    "Map CompareFaces": {
      "Type": "Pass",
      "Next": "If Face Match?",
      "Parameters": {
        "bucketName.$": "$.bucketName",
        "input.$": "$.input",
        "faceMatches.$": "$.output.FaceMatches"
      }
    },
    "Not Human": {
      "Type": "Fail"
    },
    "If Face Match?": {
      "Type": "Choice",
      "Choices": [
        {
          "And": [
            {
              "Variable": "$.faceMatches",
              "IsPresent": true
            },
            {
              "Variable": "$.faceMatches[0].Face.Confidence",
              "NumericGreaterThan": 70
            }
          ],
          "Next": "Generate code"
        }
      ],
      "Default": "Fail"
    },
    "Generate code": {
      "Type": "Task",
      "Resource": "${GenerateCodeFunctionArn}",
      "Parameters": {
        "Payload.$": "$"
      },
      "Next": "Send code"
    },
    "Send code": {
      "Type": "Task",
      "Resource": "${SendCodeFunctionArn}",
      "Parameters": {
        "Payload.$": "$"
      },
      "Next": "Success"
    },
    "Success": {
      "Type": "Succeed"
    },
    "Fail": {
      "Type": "Fail"
    }
  }
}